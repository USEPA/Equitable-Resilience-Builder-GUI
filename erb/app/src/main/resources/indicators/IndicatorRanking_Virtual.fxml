<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="vBox" prefHeight="456.0" prefWidth="936.0" spacing="10.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Button mnemonicParsing="false" onAction="#loadPreviousDataButtonAction" stylesheets="@../button.css" text="Load previous data" />
      <HBox alignment="CENTER">
         <children>
            <Label fx:id="titleLabel" text="Title" wrapText="true">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="TOP_CENTER" maxHeight="800.0" spacing="5.0">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <children>
                  <ComboBox fx:id="indicatorChoiceBox" />
                  <ScrollPane fitToHeight="true" fitToWidth="true" minWidth="80.0" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="indicatorCardVBox" alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: #E4E4E4;" />
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
            <Separator orientation="VERTICAL" />
            <VBox alignment="CENTER" style="-fx-background-color: #E0E9D1;" HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Label minHeight="20.0" minWidth="100.0" text="Less resilient">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <VBox HBox.hgrow="ALWAYS">
                           <children>
                              <ScrollPane fx:id="rankingScrollPane" fitToHeight="true" minHeight="115.0" style="-fx-border-color: #607A35;">
                                 <content>
                                    <HBox fx:id="rankingHBox" alignment="CENTER_LEFT" spacing="5.0" />
                                 </content>
                              </ScrollPane>
                           </children>
                        </VBox>
                        <Label minHeight="20.0" minWidth="105.0" text="More resilient">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <HBox HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveButtonAction" stylesheets="@../button.css" text="Save and continue later">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" onAction="#quadrantButtonAction" stylesheets="@../button.css" text="Save and continue to quadrant sorting" />
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
